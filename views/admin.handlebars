
{{!-- This will create a container for the information that will be displayed to the admin when viewing a table. --}}
<div class="container">
{{!-- Creates the table --}}
<table>
    {{!-- We create the header row which displayes the keys of the object from the table. --}}
    <tr>
        {{#each item}}
        <th >
            {{@key}}
        </th >
        {{/each}}
    </tr>
    {{!-- We loop through each item, creating a row for each item, then a column for each key. --}}
        {{#each table}}
    <tr>
        {{#each this}}
            <td>
             {{this}}
            </td>
        {{/each}}     
    </tr>
        {{/each}}
</table>   

{{!-- Provide buttons which link to different pages based on what the admin wants to accomplish. --}}
<div class="row">

{{!-- Sends the user to the change by category page --}}
<form class="col-4">
<h4> Change by Category </h4>

<select id="change-by-category"> 
        {{#each item}}
        <option value={{@key}} >
            {{@key}}
        </option >
        {{/each}}
</select>
</form>

{{!-- Sends the user to the change by id page. --}}
<form class="col-4">
    <h4>Change by ID</h4>
  <div class="form-row align-items-center">
    <div class="col-auto">
      <label class="sr-only" for="change-by-id">Name</label>
      <input type="text" class="form-control mb-2" id="change-by-id">
    </div>
    <div class="col-auto">
      <button type="button" class="btn btn-primary mb-2" id="id-change-submit">Submit</button>
    </div>
  </div>
</form>

{{!-- Sends the user to the add product page. --}}
<form class="col-4">
<h4> Add Product </h4>

<button type="button" class="btn btn-primary" id="add-product">Add a Product</button>
</form>

</div>

</div>

